@model IEnumerable<Sunnet_NBFC.Models.clsReceipt>

@{
    ViewBag.Title = "Receipt View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Receipt View</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">

                            <thead>
                                <tr>
                                    <th>Sr No</th>
                                    <th>
                                        Receipt No
                                    </th>
                                    <th>
                                        Receipt Date
                                    </th>
                                    <th>
                                        Received Amount
                                    </th>

                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @{int rowNo = 1;}
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@(rowNo++)</td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.ReceiptNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReceiptDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalAmt)
                                    </td>

                                   
                                    <td>
                                        <div class="d-flex order-actions">
                                            <a href="@Url.Action("AddReceipt","Receipt",new{Id=item.ReceiptID})"
                                               data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Edit"><u>Edit</u></a>



                                            <a href="@Url.Action("DeleteReceipt","Receipt",new{Id=item.ReceiptID})"
                                               data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Delete"
                                               style="margin-left:10px;"><u>Delete</u></a>
                                           

                                        </div>

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <div class="card-footer">
                            @Html.ActionLink("Export to Excel", "ExportToExcel", new { @class = "btn btn-primary" })
                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery/jquery.validate.min.js"></script>
<script src="~/plugins/jquery/jquery.validate.unobtrusive.min.js"></script>

