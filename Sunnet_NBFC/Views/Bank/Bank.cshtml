@model Sunnet_NBFC.Models.clsBankMaster
@{
    ViewBag.Title = "Bank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #tbl tr td {
        padding-right: 10px;
    }
</style>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add Charges</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @Html.ActionLink("Back to List", "BankView")
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
@using (Html.BeginForm("Bank", "Bank", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        @Html.HiddenFor(model => model.ReqType)
                                        @Html.HiddenFor(model => model.BankId)
                                        @Html.HiddenFor(model => model.IsDelete)

                                        @*@Html.HiddenFor(model => model.CreateBy)
                                            @Html.HiddenFor(model => model.UpdateBy)*@


                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">

                                    <div class="col-md-6">
                                        <label for="exampleInputEmail1">Bank Name</label>
                                        @Html.TextBoxFor(model => model.BankName, new { @class = "form-control", autocomplete = "off", @placeholder = "Bank Name", @name = "Bank Name", @requried = "true" })
                                        @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })


                                    </div>
                                    <div class="col-md-6">
                                        <label for="exampleInputEmail1">Bank Branch</label>
                                        @Html.TextBoxFor(model => model.BankBranch, new { @class = "form-control", autocomplete = "off", @placeholder = "Bank Branch", @name = "Bank Branch", @requried = "true" })
                                        @Html.ValidationMessageFor(model => model.BankBranch, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                                <div class="row">

                                    <div class="col-md-6">
                                        <label for="exampleInputEmail1">IFSC Code</label>
                                        @Html.TextBoxFor(model => model.BankIFSCCode, new { @class = "form-control", autocomplete = "off", @placeholder = "IFSC Code", @name = "IFSC Code", @requried = "true" })
                                        @Html.ValidationMessageFor(model => model.BankIFSCCode, "", new { @class = "text-danger" })


                                    </div>
                                    <div class="col-md-6">
                                        <label for="exampleInputEmail1">MICR Code</label>
                                        @Html.TextBoxFor(model => model.BankMICRCode, new { @class = "form-control", autocomplete = "off", @placeholder = "MICR Code", @name = "MICR Code", @requried = "true" })
                                        @Html.ValidationMessageFor(model => model.BankMICRCode, "", new { @class = "text-danger" })

                                    </div>
                                </div>




                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>

                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.row -->
            </div>
        </div>

    </section>

}
<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery/jquery.validate.min.js"></script>
<script src="~/plugins/jquery/jquery.validate.unobtrusive.min.js"></script>

