@model Sunnet_NBFC.Models.clsStageRole
@using Sunnet_NBFC.App_Code
@using Sunnet_NBFC.Models

@{
    ViewBag.Title = "StageRole View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>StageRole View</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        @using (Html.BeginForm("StageRoleView", "StageRole", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                <div class="row">

                    <div class="col-md-3">
                        <label>Employee Code </label>
                        @Html.DropDownListFor(model => model.SearchEmpId, clsEmoloyeeDDL.GetEmoloyeeDDL(), "Select", new { @class = "form-control", @id = "EmpID" })

                    </div>
                    <div class="col-md-3">
                        <label>Stage Role </label>
                        @Html.DropDownListFor(model => model.SerachRoleName, clsRoleDDL.GetRoleDDL(), "Select", new { @class = "form-control" })

                    </div>
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-secondary">Search</button>

                    </div>
                    <div class="col-md-3">
                        @*@Html.ActionLink("Export to Excel", "ExportToExcel", null, new { @class = "btn btn-primary" })*@

                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Employee Code
                                    </th>
                                    <th>
                                        Employee Name
                                    </th>
                                    <th>
                                        Role Name
                                    </th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>

                                @if (ViewBag.lst != null)
                                {

                                    foreach (var item in ViewBag.lst)
                                    {
                                        <tr>
                                            <td>
                                                @item.StageRoleEmpCode
                                            </td>
                                            <td>
                                                @item.StageRoleEmpName
                                            </td>
                                            <td>
                                                @item.StageRoleName
                                            </td>

                                            <td>
                                                <div class="d-flex order-actions">
                                                    <a href="@Url.Action("StageRole", "StageRole", new { Id = item.StageRoleId })"
                                                       data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Edit"><u>Edit</u></a>

                                                    <a href="@Url.Action("DeleteStageRole", "StageRole", new { Id = item.StageRoleId })"
                                                       data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Delete"
                                                       style="margin-left:10px;"><u>Delete</u></a>

                                                </div>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissable">
        swal("TDH", "@TempData["Success"]", "Success");
        <strong>@TempData["Success"]</strong>
    </div>
}
@if (ViewBag.Error != null && ViewBag.Error != "")
{
    <script type="text/javascript">

            window.onload = function () {
               // alert("@ViewBag.Error");
				swal("TDH", "@ViewBag.Error", "error");

            };
    </script>
}
@if (ViewBag.Success != null && ViewBag.Success != "")
{
    <script type="text/javascript">
            window.onload = function () {
                //alert("@ViewBag.Success");
				swal("TDH", "@ViewBag.Success", "Success");
            };
    </script>
}




