@model IEnumerable<Sunnet_NBFC.Models.clsCenter>

@{
    ViewBag.Title = "BranchList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Center View</h1>
            </div>
            <!--<div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">-->
                    @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Branch View</li>*@

                    <!--<h4>@Html.ActionLink("Create New", "Branch")</h4>
                </ol>
            </div>-->
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Branch Name
                                    </th>
                                    <th>
                                      Center Name
                                    </th>
                                    
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BranchName)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CenterName)
                                        </td>
                                        <td>
                                            <div class="d-flex order-actions">
                                                <a href="@Url.Action("Center","Center",new{Id=item.CenterId})"
                                                   data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Edit"><u>Edit</u></a>



                                                <a href="@Url.Action("DeleteCenter","Center",new{Id=item.CenterId})"
                                                   data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Delete"
                                                   style="margin-left:10px;"><u>Delete</u></a>

                                                @*@Html.ActionLink("Branch", "Branch", new { Id = @item.BranchId })
                                                @Html.ActionLink("Delete", "Branch", new { Id = @item.BranchId })*@

                                            </div>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="card-footer">
                            @Html.ActionLink("Export to Excel", "ExportToExcel", new { @class = "btn btn-primary" })
                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery/jquery.validate.min.js"></script>
<script src="~/plugins/jquery/jquery.validate.unobtrusive.min.js"></script>

@if (ViewBag.Error != null && ViewBag.Error != "")
{
    <script type="text/javascript">

            window.onload = function () {
                swal("TDH","@ViewBag.Error","error");
            };
    </script>
}
@if (ViewBag.Success != null && ViewBag.Success != "")
{
    <script type="text/javascript">

            window.onload = function () {
                swal("TDH","@ViewBag.Success","uccess");
            };
    </script>
}



