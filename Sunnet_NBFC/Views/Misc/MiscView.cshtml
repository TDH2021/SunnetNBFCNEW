@model Sunnet_NBFC.Models.clsMisc

@{
    ViewBag.Title = "Misc View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Misc View</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Misc View</li>*@

                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">

        @using (Html.BeginForm("MiscView", "Misc", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                <div class="row">

                    <div class="col-md-3">
                        <label>Misc Type</label>
                        @Html.DropDownListFor(model => model.MiscType,
                                   new List<SelectListItem> {
                                   new SelectListItem { Value = "" , Text = "- Select Type -" },
                                   new SelectListItem { Value = "Occupation" , Text = "Occupation" },
                                   new SelectListItem { Value = "Qualification" , Text = "Qualification" },
                                   new SelectListItem { Value = "Department" , Text = "Department" },
                                   new SelectListItem { Value = "Martial Status" , Text = "Martial Status" },
                                   new SelectListItem { Value = "Designation" , Text = "Designation" },
                                   new SelectListItem { Value = "Role" , Text = "Role" },
                                   new SelectListItem { Value = "Relation" , Text = "Reference" },
                                    new SelectListItem { Value = "CreditCheckList" , Text = "CreditCheckList" },
                                     new SelectListItem { Value = "Colletral" , Text = "Colletral" },
                                     new SelectListItem { Value = "PayMode" , Text = "PayMode" },
                                     new SelectListItem { Value = "DocumentType" , Text = "DocumentType" }
                                   },
                                   new { @class = "form-control", @id = "ddlMiscType1" })


                    </div>
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-secondary">Search</button>

                    </div>
                    <div class="col-md-3">
                        @Html.ActionLink("Export to Excel", "ExportToExcel", null, new { @class = "btn btn-primary" })

                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-md-12">

                <!-- /.card -->
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MiscName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MiscType)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.lst != null)
                                {
                                    var m = ViewBag.lst;
                                    foreach (var item in m)
                                    {

                                        <tr>
                                            <td>
                                                @item.MiscName
                                            </td>
                                            <td>
                                                @item.MiscType
                                            </td>
                                            <td>
                                                <div class="d-flex order-actions">
                                                    <a href="@Url.Action("Misc", "Misc", new { Id = item.MiscId })"
                                                       data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Edit"><u>Edit</u></a>



                                                    <a href="@Url.Action("DeleteMisc", "Misc", new { Id = item.MiscId })"
                                                       data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Delete"
                                                       style="margin-left:10px;"><u>Delete</u></a>

                                                    @*@Html.ActionLink("Misc", "Misc", new { Id = @item.MiscId })
                                                        @Html.ActionLink("Delete", "Misc", new { Id = @item.MiscId })*@

                                                </div>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <div class="card-footer">
                            @Html.ActionLink("Export to Excel", "ExportToExcel", new { @class = "btn btn-primary" })
                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery/jquery.validate.min.js"></script>
<script src="~/plugins/jquery/jquery.validate.unobtrusive.min.js"></script>

@if (ViewBag.Error != null && ViewBag.Error != "")
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Error");
            };
    </script>
}
@if (ViewBag.Success != null && ViewBag.Success != "")
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Success");
            };
    </script>
}



