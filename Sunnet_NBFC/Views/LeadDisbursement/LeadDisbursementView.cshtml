@model IEnumerable<Sunnet_NBFC.Models.clsDisbursement>

@{
    ViewBag.Title = "Lead Disbursement View";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lead Disbursement Detail</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @*<li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Employee View</li>*@

                    @*<h4>@Html.ActionLink("Create New", "StageRole")</h4>*@
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-striped table-bordered table-hover table-responsive" style="display:table;">
                            <thead>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.BeneficiaryName)</th>
                                        <td>@Html.DisplayFor(modelItem => item.BeneficiaryName)</td>
                                        <th>@Html.DisplayNameFor(model => model.BeneficiaryAccountNo)</th>
                                        <td>@Html.DisplayFor(modelItem => item.BeneficiaryAccountNo)</td>
                                    </tr>

                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IfscCode)
                                        </th>
                                        <td>@Html.DisplayFor(modelItem => item.IfscCode)</td>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NetDisbursementAmount)
                                        </th>
                                        <td>@Html.DisplayFor(modelItem => item.NetDisbursementAmount)</td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Tenure)
                                        </th>
                                        <td>@Html.DisplayFor(modelItem => item.Tenure)</td>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PaymentMode)
                                        </th>
                                        <td>@Html.DisplayFor(modelItem => item.PaymentMode)</td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UtrNo)
                                        </th>
                                        <td>@Html.DisplayFor(modelItem => item.UtrNo)</td>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LoanStartDate)
                                        </th>
                                        <td>@Html.DisplayFor(modelItem => item.LoanStartDate)</td>
                                    </tr>
                                    <tr>
                                        <th>Sanction Letter</th>
                                        <td>
                                            <div class="d-flex order-actions">
                                                @if (item.SanctionLetter_fileName != "")
                                                {
                                                    <a href="@Url.Action("DownloadFileByFileName", "LeadDisbursement", new { namestr = item.SanctionLetter_fileName })" class="btn btn-info"
                                                       data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Document"><u>Download</u></a>
                                                }
                                            </div>
                                        </td>
                                        <th>Welcome Letter</th>
                                        <td>
                                            <div class="d-flex order-actions">
                                                @if (item.WelcomeLetter_fileName != "")
                                                {
                                                    <a href="@Url.Action("DownloadFileByFileName", "LeadDisbursement", new { namestr = item.WelcomeLetter_fileName })" class="btn btn-info"
                                                       data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Document"><u>Download</u></a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Repayment Letter</th>
                                        <td>
                                            <div class="d-flex order-actions">
                                                @if (item.RepyamentLetter_fileName != "")
                                                {
                                                    <a href="@Url.Action("DownloadFileByFileName", "LeadDisbursement", new { namestr = item.RepyamentLetter_fileName })" class="btn btn-info"
                                                       data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Document"><u>Download</u></a>
                                                }
                                            </div>
                                        </td>
                                        <th></th>
                                        <td>
                                            <div class="d-flex order-actions">
                                                @*<a href="@Url.Action("DownloadSanctionLetter", "LeadDisbursement", new { LeadId = item.LeadId })" class="btn btn-info"
                                                    data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Document"><u>SanctionLetter</u></a>*@
                                            </div>

                                        </td>
                                    </tr>
                                }
                            </thead>
                        </table>
                        @*<div class="card-footer">
                                @Html.ActionLink("Export to Excel", "ExportToExcel", new { @class = "btn btn-primary" })
                            </div>*@


                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

 @{ Html.RenderAction("LeadPostDisbursementView", "LeadPostDisbursement"); }
