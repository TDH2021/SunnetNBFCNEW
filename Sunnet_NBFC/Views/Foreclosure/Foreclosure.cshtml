										@Html.TextBoxFor(model => model.TotalInst, new { @class = "form-control", @readonly = "true" })
									</div>

								</div>
								<div class="row">
									<div class="col-md-12">
										&nbsp;
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<H5> <b>Foreclose Amount Details </b></H5>
										<hr style="color:green" />
									</div>
								</div>

								<div class="row">
									<div class="col-md-3">
										@Html.LabelFor(model => Model.pos, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.pos, new { @class = "form-control", @readonly = "true" })
									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.CurrentMonthInterest, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.CurrentMonthInterest, new { @class = "form-control", @readonly = "true" })

									</div>
									<div class="col-md-3">

										@Html.LabelFor(model => Model.InstalmentOverdue, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.InstalmentOverdue, new { @class = "form-control", @readonly = "true" })
									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.BouncingCharges, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.BouncingCharges, new { @class = "form-control", @readonly = "true" })

									</div>
								</div>

								<div class="row">
									<div class="col-md-3">
