@model Sunnet_NBFC.Models.clsForecloseEntry
@using Sunnet_NBFC.App_Code
@using Sunnet_NBFC.Models
@{
	ViewBag.Title = "Foreclosure";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Foreclosure</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					@*@Html.ActionLink("Back to List", "LedgerMasterView")*@
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

@using (Html.BeginForm("Foreclosure", "Foreclosure", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })


	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card">
						<div class="card-body">

							<div class="form-group">
								<div class="row">
									<div class="col-md-12">
										@Html.HiddenFor(model => model.ReqType)
										@Html.HiddenFor(model => model.LeadId)
										@Html.HiddenFor(model => model.CompanyID)

									</div>
								</div>
							</div>

							<div class="form-group">
								<div class="row">
									<div class="col-md-12">
										<h5><b> Selected Lead Detail</b></h5>
										<hr style="color:green" />
									</div>
								</div>
								<div class="row">
									<div class="col-md-3">
										@Html.LabelFor(model => Model.LeadNo, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.LeadNo, new { @class = "form-control", @readonly = "true" })
									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.BranchName, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.BranchName, new { @class = "form-control", @readonly = "true" })

									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.DSAName, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.DSAName, new { @class = "form-control", @readonly = "true" })

									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.MainProduct, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.MainProduct, new { @class = "form-control", @readonly = "true" })

									</div>
								</div>

								<div class="row">
									<div class="col-md-3">

										@Html.LabelFor(model => Model.ProductName, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.ProductName, new { @class = "form-control", @readonly = "true" })
									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.CustName, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.CustName, new { @class = "form-control", @readonly = "true" })
									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.FatherName, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.FatherName, new { @class = "form-control", @readonly = "true" })

									</div>
									<div class="col-md-3">

										@Html.LabelFor(model => Model.MobileNo1, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.MobileNo1, new { @class = "form-control", @readonly = "true" })
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										&nbsp;
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<h5><b> Loan Detail </b> </h5>
										<hr style="color:green" />
									</div>
								</div>
								<div class="row">

									<div class="col-md-3">
										@Html.LabelFor(model => Model.NetDisbursementAmount, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.NetDisbursementAmount, new { @class = "form-control", @readonly = "true" })
									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.ROI, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.ROI, new { @class = "form-control", @readonly = "true" })

									</div>
									<div class="col-md-3">

										@Html.LabelFor(model => Model.Tenure, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.Tenure, new { @class = "form-control", @readonly = "true" })
									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.LoanStartDate, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.LoanStartDate, new { @class = "form-control", @readonly = "true" })

									</div>
								</div>

								<div class="row">
									<div class="col-md-3">
