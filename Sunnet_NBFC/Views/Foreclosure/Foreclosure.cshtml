										@Html.TextBoxFor(model => model.ExcessAmount, new { @class = "form-control", @readonly = "true" })
									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.PenalCharges, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.PenalCharges, new { @class = "form-control", @readonly = "true" })

									</div>
									<div class="col-md-3">

										@Html.LabelFor(model => Model.OtherCharges, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.OtherCharges, new { @class = "form-control", @readonly = "true" })
									</div>

								</div>

								<div class="row">

									<div class="col-md-3">
										@Html.LabelFor(model => Model.ForeclosureCharges, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.ForeclosureCharges, new { @class = "form-control", @readonly = "true" })

									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.GstOnForclose, new { @class = "control-label" })<br />
										@Html.TextBoxFor(model => model.GstOnForclose, new { @class = "form-control", @readonly = "true" })

									</div>
									<div class="col-md-3">
										@Html.LabelFor(model => Model.FinalForeclosureAmount, new { @class = "control-label" }) <br />
										@Html.TextBoxFor(model => model.FinalForeclosureAmount, new { @class = "form-control", @readonly = "true" })

									</div>

								</div>
							</div>

							<div class="card-footer">

								<input type="submit" value="Save" class="btn btn-primary" />
								@Html.ActionLink("Cancel", "SearchForeclosure", "SearchForeclosure", null, new { @class = "btn btn-danger btn-large" })
							</div>


						</div>
					</div>

				</div>
			</div>
		</div>

	</section>

}

<script src="~/Scripts/CustomJS/StageRole.js"></script>
@if (ViewBag.Error != null && ViewBag.Error != "")
{
	<script type="text/javascript">

            window.onload = function () {
               // alert("@ViewBag.Error");
				swal("TDH", "@ViewBag.Error", "error");
				callfillemp();
            };
	</script>
}
@if (ViewBag.Success != null && ViewBag.Success != "")
{
	<script type="text/javascript">
            window.onload = function () {
                //alert("@ViewBag.Success");
				swal("TDH", "@ViewBag.Success", "Success");
            };
	</script>
}



