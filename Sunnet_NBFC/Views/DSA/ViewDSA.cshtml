
@{ ViewBag.Title = "DSA VIEW";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>DSA View</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Question View</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>DSA Code</th>
                                    <th>DSA Name</th>
                                    <th>Contact No</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Pan No</th>
                                    <th>Aadhar No</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.lst != null)
                                {
                                    foreach (var item in ViewBag.lst)
                                    {

                                <tr>
                                    <td>@item.DSACode</td>
                                    <td>@item.DSAName</td>
                                    <td>@item.DSAContactNo</td>
                                    <td>@item.CityName</td>
                                    <td>@item.StateName</td>
                                    <td>@item.PAN</td>
                                    <td>@item.AAdharNo</td>
                                    <td>
                                        <div class="d-flex order-actions">
                                            <a href="@Url.Action("EditDSA","DSA",new{Id=item.DSAId})"
                                               data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Edit"><u>Edit</u></a>



                                            <a href="@Url.Action("DeleteDSA","DSA",new{Id=item.DSAId})"
                                               data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Delete"
                                               onclick="return Submit();" style="margin-left:10px;"><u>Delete</u></a>


                                        </div>

                                    </td>
                                </tr>
                                    }
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>DSA Code</th>
                                    <th>DSA Name</th>
                                    <th>Contact No</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Pan No</th>
                                    <th>Aadhar No</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="card-footer">
                            @Html.ActionLink("Export to Excel", "ExportToExcel", new { @class = "btn btn-primary" })
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<script type="text/javascript">
    function Submit() {
        if (confirm("Are you sure you want to delete ?")) {
            return true;
        } else {
            return false;
        }
    }</script>