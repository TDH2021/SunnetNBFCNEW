
@{ ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="card">
                        <div class="form-group">

                            <div class="row">
                                <div class="col-md-6">
                                    <table id="example" class="table table-bordered table-striped">
                                        
                                        <thead>
                                            <tr>
                                                <th colspan="3">
                                                    Lead Data Summary
                                                </th>
                                            </tr>
                                            <tr>

                                                <th>Count</th>
                                                <th>Stage</th>
                                                <th>-</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @if (ViewBag.lst != null)
                                            {


                                                foreach (var item in ViewBag.lst)
                                                {

                                                    <tr>

                                                        <td>@item.cnt</td>
                                                        <td>@item.Stage_Name</td>

                                                        <td>
                                                            <div class="d-flex order-actions">
                                                                <a href="@Url.Action("LeadFinalApprove", "LeadFinalApprove", new { ShortStage_Name = item.ShortStage_Name})"
                                                                   data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Document"><u>Click </u></a>
                                                            </div>

                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>

                                </div>
                                <div class="col-md-6">
                                    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
                                </div>
                            </div>
                        </div>


                        @*<div class="card-footer">
                    @Html.ActionLink("Export to Excel", "ExportToExcel", new { @class = "btn btn-primary" })
                </div>*@
                    </div>
                    <!-- /.card-body -->


                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

</section>
<script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
<script>
window.onload = function () {
/*    alert("A");*/
var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
	title: {
		text: "Lead Data Summary"
	},
	data: [{
		type: "doughnut",
		startAngle: 60,
		indexLabelFontSize: 16,
		indexLabel: "{label} - {y}%",
		toolTipContent: "<b>{label}:</b> {y}%",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
	}]
});
chart.render();

}
</script>
