@model Sunnet_NBFC.Models.clsLeadGenerationMaster
@{
    ViewBag.Title = "DisburseReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Disburse Report</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="col-md-12">

            @using (Html.BeginForm("DisburseReport", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="form-group">
                    <div class="row">

                        <div class="col-md-3">
                            <label>Main Product</label>
                            @Html.DropDownListFor(model => model.MainProductId, ViewBag.MainProductList as SelectList, "- Select Main Product- ",
                                       new { @class = "form-control", @id = "ddlMainProduct" })
                        </div>
                        <div class="col-md-3">
                            <label>Product</label>
                            @Html.DropDownListFor(model => model.ProductId,
                                           new SelectList(Enumerable.Empty<SelectListItem>(), "ProdId", "ProductName"),
                                           "- Select Product -", new { @class = "form-control", @id = "ddProduct" })
                        </div>
                        <div class="col-md-3">
                            <label>Lead Number</label>
                            @Html.TextBoxFor(model => model.LeadNo, new { @class = "form-control", @id = "txtLeadNo", @autocomplete = "off", })
                        </div>
                        <div class="col-md-3">
                            <label>Mobile No</label>
                            @Html.TextBoxFor(model => model.MobileNo1, new { @class = "form-control", @id = "txtMobieNo1", @autocomplete = "off" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">

                        <div class="col-md-3">
                            <label>From Date</label>
                            @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control datestyle", @id = "txtFromDate", @autocomplete = "off", })
                        </div>
                        <div class="col-md-3">
                            <label>To Date</label>
                            @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control datestyle", @id = "txtToDate", @autocomplete = "off", })
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-secondary">Search</button>

                        </div>
                        <div class="col-md-3">
                            @Html.ActionLink("Export to Excel", "ExportToExcel",new { Reqtype = "DisburseReport" }, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            }


        </div>


        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>Lead No</th>
                                    <th>Main Product</th>
                                    <th>Product Name</th>
                                    <th>Customer Name</th>
                                    <th>Mobile No</th>
                                    <th>Date of Submission</th>
                                    <th>Last Update date</th>
                                    <th>Disburse date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (ViewBag.lst != null)
                                {

                                    var m = ViewBag.lst;
                                    foreach (var item in m)
                                    {
                                        <tr>
                                            <td>@item.LeadNo</td>
                                            <td>@item.MainProductName</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.CustomerName</td>
                                            <td>@item.MobileNo1</td>
                                            <td>@item.CreateDate</td>
                                            <td>@item.Updatedate</td>
                                            <td>@item.DisburseDate</td>
                                            <td>@item.LeadStatus</td>
                                        </tr>
                                    }
                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Lead No</th>
                                    <th>Main Product</th>
                                    <th>Product Name</th>
                                    <th>Customer Name</th>
                                    <th>Mobile No</th>
                                    <th>Date of Submission</th>
                                    <th>Last Update date</th>
                                    <th>Status</th>
                                    <th>Disburse date</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="card-footer">

                        </div>
                    </div>
                    <!-- /.card-body -->


                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>



</section>
<script src="~/Scripts/CustomJS/CommonFunction.js"></script>